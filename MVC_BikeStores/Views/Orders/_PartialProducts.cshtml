@model IEnumerable<MVC_BikeStores.Models.Order_Items>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Product_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.List_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
        <th>
            Total Price
        </th>
        <th>
            Discount Total
        </th>
        <th>
            Sub Total
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Product_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.List_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @item.Total.ToString("c")
            </td>
            <td>
                @item.TotalDiscount.ToString("c")
            </td>
            <td>
                @item.TotalDiscounted.ToString("c")
            </td>

        </tr>
    }
</table>

Totale @Model.Sum(x => x.TotalDiscounted).ToString("c")
