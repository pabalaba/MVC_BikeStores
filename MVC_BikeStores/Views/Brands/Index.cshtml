@model IEnumerable<MVC_BikeStores.Models.Brand>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (User.IsInRole("Administrators"))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Brand_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Brand_Name)
        </td>
        <td>
            @if (User.IsInRole("Administrators"))
            {
                @Html.ActionLink("Edit ", "Edit", new { id = item.Brand_Id })
                @Html.ActionLink("Delete ", "Delete", new { id = item.Brand_Id })
            }
            @Html.ActionLink("Lista Prodotti", "ProductsListByBrand", "Products", new { id = item.Brand_Id }, null)

        </td>
    </tr>
}

</table>
